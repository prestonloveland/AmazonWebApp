@{
    ViewData["Title"] = "Home Page";
}
@model BookListViewModel
<!--index page-->
<body class="bg-dark text-light">

    <img style="width:500px; margin-left:auto; margin-right:auto; display:block;" src="~/amazon.png" />

    <div class="text-center font-weight-bolder">
        <h1 class="display-4">Welcome to Amazon!</h1>
        <p class="font-italic">Where we have all the books you can imagine. From A to Z.</p>

    </div>
    <br /><br />
    @foreach (var i in Model.Books)
    {
        <div class="align-self-center text-center card justify-content-center bg-dark border-light m-1 p-1" style="max-width: 18rem;">
            <h4 class="font-weight-bold">@i.Title</h4>
            <p>Author: @i.AuthorFirstName @i.AuthorLastName</p>
            <p>Publisher: @i.Publisher</p>
            <p>Classification: @i.Classification</p>
            <p>Category: @i.Category</p>
            <p>Book ISBN: @i.ISBN</p>
            <p>Price: <span style="color:red">@i.Price</span></p>
        </div>
        <br />
    }

    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-outline-light" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>
</body>